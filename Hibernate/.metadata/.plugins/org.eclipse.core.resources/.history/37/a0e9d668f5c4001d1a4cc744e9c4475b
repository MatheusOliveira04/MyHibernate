		String jpql = "select c from Pessoa c WHERE id = :idP";
		TypedQuery<Pessoa> tq = em.createQuery(jpql, Pessoa.class)
				.setParameter("idP", 1);
		List<Pessoa> ps = tq.getResultList();
		
		for(Pessoa p : ps) {
			System.out.println(p.getName());
		}
		
		em.close(); //FECHA A TRANSAÇÃO COM O BD
		emf.close();
		
